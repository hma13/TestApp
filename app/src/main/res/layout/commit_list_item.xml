<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="commit"
            type="com.example.github.data.CommitListItem" />

        <variable
            name="listener"
            type="com.example.github.ui.commit.CommitListAdaptor.OnCommitListItemClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:onClick="@{() -> listener.onItemClick(commit)}">

        <TextView
            android:id="@+id/author"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@{commit.commitInfo.authorName}"
            app:layout_constraintEnd_toStartOf="@id/hash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3"
            tools:text="author" />

        <TextView
            android:id="@+id/hash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/author"
            app:layout_constraintTop_toTopOf="@id/author"
            android:text="@{commit.sha}"
            tools:text="1234abc" />

        <TextView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="@{commit.commitInfo.message}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/author"
            tools:text="this is my message" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>